<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CrocActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/topLayer">

        <dk.aau.cs.giraf.gui.GButton
            android:drawableTop="@drawable/help_button"
            android:id="@+id/help_button"
            android:layout_width="64dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:text="Hjælp" />

        <dk.aau.cs.giraf.gui.GButton
            android:id="@+id/start_save_dialog_button"
            android:layout_width="64dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/start_load_dialog_button"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/save"
            android:text="Gem"/>

        <dk.aau.cs.giraf.gui.GButton
            android:id="@+id/start_load_dialog_button"
            android:layout_width="64dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/start_record_dialog_button"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/load_pictogram"
            android:text="Indlæs"/>

        <dk.aau.cs.giraf.gui.GButton
            android:id="@+id/start_record_dialog_button"
            android:layout_width="64dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/toggleCanvas"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/mic"
            android:adjustViewBounds="true"
            android:text="Optag"/>

        <dk.aau.cs.giraf.gui.GToggleButton
            android:id="@+id/toggleCanvas"
            android:layout_width="64dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/toggleCam"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/brush" />

        <dk.aau.cs.giraf.gui.GToggleButton
            android:id="@+id/toggleCam"
            android:layout_width="64dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/quit_button"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/cam"
            />

        <dk.aau.cs.giraf.gui.GButton
            android:id="@+id/quit_button"
            android:layout_width="64dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:drawableTop="@drawable/cancel_button"
            android:onClick="doExit"
            android:text="Luk"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.88"
        android:longClickable="false">

    </FrameLayout>

</LinearLayout>
