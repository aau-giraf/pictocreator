<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_background"
    android:id="@+id/camera_relativeLayout"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="50dp">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="500dp"
        android:layout_height="500dp">
    </FrameLayout>



    <LinearLayout
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom = "true"
          android:layout_gravity="center_horizontal">

          <dk.aau.cs.giraf.gui.GToggleButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/color_effects"
              android:drawableTop="@drawable/bw_icon"
              android:layout_toLeftOf="@+id/button_capture"/>

          <dk.aau.cs.giraf.gui.GButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/button_capture"
              android:drawableTop="@drawable/cam"
              android:layout_gravity="center_vertical"/>

          <dk.aau.cs.giraf.gui.GButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/switch_cam"
              android:drawableTop="@drawable/cam_facing"
              android:layout_toRightOf="@+id/button_capture"/>

      </LinearLayout>

</LinearLayout>
</RelativeLayout>