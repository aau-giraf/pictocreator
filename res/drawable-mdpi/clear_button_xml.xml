<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list >
            <item >
                <shape
                    android:shape="rectangle" >
                    <solid
                        android:color="@color/black_shadow" />
                    <corners
                        android:radius="10dp" />
                </shape>
            </item>
            <item
                android:bottom="4dp" >
                <shape
                    android:shape="rectangle" >
                    <corners
                        android:radius="10dp" />
                    <solid
                        android:color="@color/croc_fragment"/>
                </shape>
            </item>

            <item
                android:bottom="4dp" >
                <shape
                    android:shape="rectangle" >

                    <corners
                        android:radius="10dp" />
                    <gradient
                        android:startColor="@color/drk_gradient"
                        android:endColor="@color/gloss_gradient"
                        android:angle="90" />
                    <padding
                        android:left="1dp"
                        android:top="1dp"
                        android:right="1dp"
                        android:bottom="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/drk_gradient" />
                </shape>
            </item>

            <item android:drawable="@drawable/clear_icon" />
        </layer-list>
    </item>

</selector>