<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/helpDialogLayout">
    
    <RelativeLayout
        android:id="@+id/topHelpBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:padding="5dp" >
        
        <dk.aau.cs.giraf.gui.GTextView
			android:id="@+id/dialog_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Hjælp (Værktøjer og Funktionalitet)"
			android:textSize="15sp"
			android:textStyle="bold"
			android:textColor="@color/croc_fragment"
			android:shadowColor="@color/drk_gradient"
			android:shadowRadius="5"
			android:layout_marginLeft="40dp"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true" />
        
        <dk.aau.cs.giraf.gui.GirafButton
            android:id="@+id/close_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:icon="@drawable/gcancel_icon"
            app:text="Luk"/>
        
    </RelativeLayout>
    <FrameLayout 
        android:id="@+id/help_body"
        android:layout_width="400dp"
        android:layout_height="480dp"
        android:padding="20dp"
        android:layout_weight="0.82" >
        
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:padding="5dp" >
        
        <dk.aau.cs.giraf.gui.GirafButton
            android:id="@+id/previous_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            app:icon="@drawable/prev_icon"
            app:text="Forrige"/>

        <dk.aau.cs.giraf.gui.GTextView
            android:id="@+id/help_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
          />

        <dk.aau.cs.giraf.gui.GirafButton
            android:id="@+id/next_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            app:icon="@drawable/next_icon"
            app:text="Næste"/>
        
    </RelativeLayout>

</LinearLayout>